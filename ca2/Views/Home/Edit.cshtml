@model ca2.Models.Movie

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="lead">Edit @Model.Title</div>
        </div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Movie</legend>

        @Html.HiddenFor(model => model.MovieId)
        <div class="row" style="margin:1px">
            <div class="formgroup col-xs-4">
                @Html.LabelFor(model => model.Title) 
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
            <div class="formgroup col-xs-4">
                @Html.LabelFor(model => model.ReleaseDate)
                @Html.EditorFor(model => model.ReleaseDate)
                @Html.ValidationMessageFor(model => model.ReleaseDate)
            </div>
            <div class="formgroup col-xs-4">
                @Html.LabelFor(model => model.Director)
                @Html.DropDownList("DirectorId", new SelectList(ViewBag.directors, "DirectorId", "Name", Model.DirectorId),
                            new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Director.Name)
            </div>
</div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div class="panel-footer">
            <a class="btn btn-primary" href="@Url.Action("Index")">
                <span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;Back to Home Page
            </a>
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
